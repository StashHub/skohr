{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "jsx": "preserve",
    "checkJs": true,
    "incremental": true,
    "paths": {
      "@ui/*": ["../../packages/ui/src/*"]
    }
  }
}
