{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": { "dependsOn": ["^lint"] },
    "type-check": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {},
    "db:migrate:deploy": {},
    "db:push": {},
    "db:seed": {},
    "db:studio": {},
    "generate": {
      "dependsOn": ["^generate"]
    }
  }
}
